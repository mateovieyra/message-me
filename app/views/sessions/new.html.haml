%h2.text-center.mt-3 
  Welcome to MessageMe - 
  %em a complete Chat App

.row.text-center.mt-4
  .col-12
    .fs-5.mb-3.d-flex.flex-column.align-items-center
      %svg.bi.bi-power(fill="currentColor" height="48" style="color: #fd7e14;" viewbox="0 0 16 16" width="48" xmlns="http://www.w3.org/2000/svg")
        %path(d="M7.5 1v7h1V1h-1z")
        %path(d="M3 8.812a4.999 4.999 0 0 1 2.578-4.375l-.485-.874A6 6 0 1 0 11 3.616l-.501.865A5 5 0 1 1 3 8.812z")
      %div
        Log in to continue

.row.mt-4.justify-content-center 
  .col-12.col-md-4 
    .card.p-3.shadow
      .card-body 
        = form_for(:session, url: login_path) do |f| 
          .mb-3 
            = f.label :username, class: "form-label", for:"inputUsername"  
            = f.text_field :username, class: "form-control shadow-sm", id: "inputUsername"
          .mb-3 
            = f.label :password, class: "form-label", for:"inputPassword"  
            = f.password_field :password, class: "form-control shadow-sm", id: "inputPassword"
          = f.button "Login", class: "btn btn-primary mb-3"
